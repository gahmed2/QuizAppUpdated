<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Scroll" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/quiz</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="LinearOne" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextStyle" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/TextWhite</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:textColorHint">@color/TextWhite</item>
        <item name="android:layout_margin">@dimen/marginAll</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CardStyle" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/marginAll</item>
    </style>

    <style name="QAStyle" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textSize">@dimen/QAtextSize</item>
    </style>

    <style name="LinearThree" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_below">@id/LinearTwo</item>
        <item name="android:layout_margin">@dimen/marginAll</item>
    </style>

    <style name="ScoreText" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

    <style name="ButtonStyle" parent="android:Theme"> <!--for answers-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:buttonTint">@color/TextWhite</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
    </style>

    <style name="LinearButton" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PushButton" parent="android:Theme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ButtonBlue</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:textSize">@dimen/PushButtonTextSize</item>
    </style>

    <style name="ResetPushButton" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ButtonRed</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:textSize">@dimen/PushButtonTextSize</item>
    </style>

    <style name="View0" parent="android:Theme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
